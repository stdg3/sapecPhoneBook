@model CreateCartViewmModel


<h1>Create Cart</h1>

<h4>Contact Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCart">
            @*<input type="hidden" asp-for="ContactId" />*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContactFirstName" class="control-label"></label>
                <input asp-for="ContactFirstName" class="form-control" />
                <span asp-validation-for="ContactFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactLastName" class="control-label"></label>
                <input asp-for="ContactLastName" class="form-control" />
                <span asp-validation-for="ContactLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactAdress" class="control-label"></label>
                <input asp-for="ContactAdress" class="form-control" />
                <span asp-validation-for="ContactAdress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumbersOfContactNumber" class="control-label"></label>
                <input asp-for="NumbersOfContactNumber" class="form-control" />
                <span asp-validation-for="NumbersOfContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneTypeId" class="control-label"></label>
                <select class="form-control" asp-for="PhoneTypeId" asp-items="ViewBag.PhoneTypesList"></select>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }