@model test.ViewModel.CreateNumOfContViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NumbersOfContact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="ContactId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumbersOfContactNumber" class="control-label"></label>
                <input asp-for="NumbersOfContactNumber" class="form-control" />
                <span asp-validation-for="NumbersOfContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneTypesList" class="control-label"></label>
                <select class="form-control"  asp-for="@Model.PhoneTypeId" asp-items="@Model.PhoneTypesList"></select>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-controller="Contacts" asp-action="Details" asp-route-id="@Model.ContactId">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
